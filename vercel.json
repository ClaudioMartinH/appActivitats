{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/appActivitats/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/",
      "dest": "frontend/public/pages/register.html"
    },
    {
      "src": "/login",
      "dest": "frontend/public/pages/login.html"
    },
    {
      "src": "/register",
      "dest": "frontend/public/pages/register.html"
    },
    {
      "src": "/appActivitats/main",
      "dest": "frontend/public/pages/main.html"
    },
    {
      "src": "/(.+)",
      "dest": "frontend/public/$1"
    }
  ]
}